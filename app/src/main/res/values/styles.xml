    <style name="list_view">
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1px</item>
       <!--  <item name="android:fadingEdge">none</item> -->
        <item name="android:listSelector">#00000000</item>
        <!-- <item name="android:scrollbars">none</item> -->
    </style>
    
    <style name="header_linear_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/head_layout_bg_color</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="home_header_linear_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/home_bg_title</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="header_text_view" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/header_title_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
    </style>
    
    <style name="search_text_view" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/header_title_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="home_header_text_view" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">13.6sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#EEFFFFFF</item>
        <item name="android:text">@string/app_name</item>
    </style>
    

    <style name="search_view" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/header_title_text_size</item>
        <item name="android:layout_height">wrap_content</item> 
       <!--  <item name="colorControlNormal">#e5e9ec</item> 
        <item name="colorControlActivated">#e5e9ec</item> -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="header_button_left">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:onClick">onClick</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="header_button_right" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/header_button_text_color</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_width">27dp</item>
        <item name="android:layout_marginLeft">9dip</item>
        <item name="android:background">@drawable/set</item>
        <item name="android:text">选项</item>
        <item name="android:onClick">onClick</item>
        <item name="android:layout_gravity">center_vertical|right</item>
    </style>
    
    
    <style name="button" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>
    
    <style name="radio_button" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:button">@drawable/hy_radio_btn</item>  
    </style>
    
    <style name="btn_num" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">@dimen/btn_num_size</item>
        <item name="android:layout_width">@dimen/btn_num_size</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
    
    <style name="tv_num" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">@dimen/btn_num_size</item>
        <item name="android:textColor">@color/text_color</item>
        
        <item name="android:background">@drawable/lv_num_bg</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>
    
    <style name="text" >
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    
    <style name="stat_text" >
        <item name="android:textSize">@dimen/stat_text_size</item>
        <item name="android:textColor">@color/stat_text_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
    
    <style name="dlg_text" >
        <item name="android:textSize">@dimen/dlg_text_size</item>
        <item name="android:textColor">@color/dlg_text_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="list_item_text" >
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:background">@drawable/list_blockbg</item> -->
        <item name="android:padding">5dp</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="list_his_item_text" >
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="list_bh_item_text" >
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="list_pd_item_text" >
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style name="list_pd_item_text2" >
        <item name="android:textSize">@dimen/list_pd_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="image_text" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/icon_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/img_text_color</item>
    </style>
    
    <style name="big_imageview">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:maxWidth">56dp</item>
        <item name="android:maxHeight">56dp</item>
    </style>
    
    <style name="hy.dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item><!--半透明 -->
        <item name="android:backgroundDimEnabled">true</item><!--模糊 -->
    </style>
    
     
    <style  
        name="Theme.Loading"  
        parent="@android:style/Theme.Holo.Light.NoActionBar" >  
        <item name="android:windowBackground">@drawable/loading_bg</item>  
    </style>  
    
</resources>
